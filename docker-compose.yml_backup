services:
  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: frontend
    ports:
      - "3000:3000"
    volumes:
      - ./frontend:/app
      - /app/node_modules
    depends_on:
      - backend
      - ai_service
  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: backend
    volumes:
      - ./backend:/var/www/html
    depends_on:
      - redis
 
  nginx:
   image: nginx:alpine
   container_name: nginx
   ports:
    - "8080:80"
   volumes:
     - ./backend/nginx.conf:/etc/nginx/conf.d/default.conf:ro
     - ./backend:/var/www/html
   depends_on:
     - backend
     - ai_service

  ai_service:
    build:
      context: ./ai_service
      dockerfile: Dockerfile
    container_name: ai_service
    ports:
      - "5000:5000"
    volumes:
      - ./ai_service:/app
    depends_on:
      - redis

  redis:
    image: redis:alpine
    container_name: redis
    ports:
      - "6379:6379"

